-- Create the database
CREATE DATABASE animal_species_db;
USE animal_species_db;

-- Conservation Status table
CREATE TABLE conservation_status (
    status_id INT AUTO_INCREMENT PRIMARY KEY,
    status_name VARCHAR(50) NOT NULL,
    description TEXT
);

-- Species table
CREATE TABLE species (
    species_id INT AUTO_INCREMENT PRIMARY KEY,
    common_name VARCHAR(100) NOT NULL,
    scientific_name VARCHAR(100) NOT NULL,
    description TEXT,
    population_estimate INT,
    status_id INT,
    FOREIGN KEY (status_id) REFERENCES conservation_status(status_id)
);

-- Taxonomy table
CREATE TABLE taxonomy (
    taxonomy_id INT AUTO_INCREMENT PRIMARY KEY,
    species_id INT UNIQUE,
    kingdom VARCHAR(50),
    phylum VARCHAR(50),
    class VARCHAR(50),
    order VARCHAR(50),
    family VARCHAR(50),
    genus VARCHAR(50),
    FOREIGN KEY (species_id) REFERENCES species(species_id)
);

-- Habitat table
CREATE TABLE habitat (
    habitat_id INT AUTO_INCREMENT PRIMARY KEY,
    species_id INT,
    habitat_type VARCHAR(100),
    geographic_range VARCHAR(255),
    FOREIGN KEY (species_id) REFERENCES species(species_id)
);

-- Physical Characteristics table
CREATE TABLE physical_characteristics (
    characteristic_id INT AUTO_INCREMENT PRIMARY KEY,
    species_id INT UNIQUE,
    average_weight_kg FLOAT,
    average_length_cm FLOAT,
    lifespan_years INT,
    FOREIGN KEY (species_id) REFERENCES species(species_id)
);

-- Insert conservation statuses
INSERT INTO conservation_status (status_name, description) VALUES
